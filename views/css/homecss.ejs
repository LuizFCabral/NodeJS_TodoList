<style>
    :root{
        --clrHeader: #6614d1;
        --clrHeaderL: #19bcfe;
    }

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, ul, li p, h3{
        margin: 0px;
        padding: 0px;
        list-style: none;
        font-family: Arial;
    }

    body{
        margin-bottom: 100px;
    }


    /* HEADER */
    .header{
        font-size: 1.5rem;
        width: 100%;
        background: var(--clrHeader);
        color: white;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between ;
        align-items: center;
        padding: 20px;
        margin-bottom: 50px;
    }

    .header nav{
        margin-right: 40px;
    }

    .menu{
        display: flex;
    }

    .menu li{
        margin-right: 20px;
    }

    .header  button{
        border: none;
        background: var(--clrHeader);
        border-radius: 50%;
        width: 40px;
        height: 40px;
        outline: none;
    }

    .header button:hover{
        background-color: #7d34de;
    }

    /* Listas */
    .lists{
        display: flex;
        flex-wrap: wrap;
        max-width: 1000px;
        margin: 0 auto;
    }

    .lists div{
        flex: 1 1 200;
        margin: 10px;
    }

    .list{
        position: relative;
        width: 310px;
        border: 1px solid #ccc;
    }

    .list h2{
        background: var(--clrHeaderL);
        color: #fff;
        padding: 10px 20px;
        font-weight: 600;
    }

    .list ul{
        position: relative;
        padding: 20px;
    }

    .list ul li{
        position: relative;
        padding: 15px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .list ul li:last-child{
        border-bottom: none;
    }

    .list ul li label{
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

    .list ul li label input{
        visibility: hidden;
        appearance: none;
    }

    .list ul li label p{
        position: absolute;
    }

    .list ul li label span{
        position: relative;
        width: 20px;
        height: 20px;
        border: 1px solid #ccc;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .list ul li label span:before{
        content: '';
        position: absolute;
        top: 5px;
        width: 10px;
        height: 5px;
        border-left: 2px solid #ccc;
        border-bottom: 2px solid #ccc;
        transform: rotate(-40deg);
    }

    .list ul li label input:checked ~ p{
        text-decoration: line-through;
        color: #ccc;
    }

    .list ul li label input:checked ~ span{
        background: var(--clrHeaderL);
        border: 1px solid var(--clrHeaderL);
    }

    .list ul li label input:checked ~ span::before{
        border-left: 2px solid #ccc;
        border-bottom: 2px solid #ccc;
    }

    /* Add list button */
    .opt{
        display: flex;
        flex-wrap: wrap;
        max-width: 1000px;
        margin: 0 auto;
        align-items: center;
    }

    .buttonAddList{
        position: relative;
        margin-left: 15px;
    }

    .showAddList{
        background-color: #c3ced2;
        border: 0;
        border-radius: 10%;
        width: 35px;
        height: 35px;
        opacity: 0.5;
    }

    .icon-plus{
        position: absolute;
        left: 5px;
        top: 5px;
        z-index: -1;
    }

    .createList input{
        margin-left: 20px;
        height: 30px;
        border-radius: 10px;
        font-size: 1rem;
        outline-style: none;
    }

    .createList button{
        height: 30px;
        border-radius: 5px;
        font-size: 1rem;
    }

</style>